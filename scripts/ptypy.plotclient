#! /usr/bin/python

import sys

usage = """\
Usage:
%s [template]

Spawn a plotting client
""" % sys.argv[0]

if len(sys.argv) > 1:
    template = sys.argv[1]
else:
    template = None
    
from ptypy import io
from ptypy import utils as u
u.verbose.set_level(5)
plotter=u.MPLClient(plotting_pars=template)
plotter.loop_plot()
